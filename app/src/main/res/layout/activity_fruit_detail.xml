<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="10dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#6E52FC">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0sp"
            android:layout_margin="0dp"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="15dp"
                android:text="Name"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#A0E7E5"/>

            <TextView
                android:id="@+id/tv_genus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:text="Genus"
                android:textSize="14dp"
                android:textColor="#B4F8C8"/>

            <TextView
                android:id="@+id/tv_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:text="Order"
                android:textSize="14dp"
                android:textColor="#B4F8C8"/>

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:text="Id"
                android:textSize="14dp"
                android:textColor="#B4F8C8"/>

            <TextView
                android:id="@+id/tv_family"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#B4F8C8"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:text="Family"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/tv_nutritions"
                android:textColor="#B4F8C8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:text="Nutritions"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/tv_carbohydrates"
                android:textColor="#B4F8C8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:text="Carbohydrates"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/tv_protein"
                android:textColor="#B4F8C8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:text="Protein"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/tv_fat"
                android:textColor="#B4F8C8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:text="Fat"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/tv_calories"
                android:textColor="#B4F8C8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:text="Calories"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/tv_sugar"
                android:textColor="#B4F8C8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:text="Sugar"
                android:textSize="14dp"/>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
